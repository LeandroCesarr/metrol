.o-menu {
  height: 100%;
  background-color: $colors.main-gray;
  text-align: right;
  min-width: 200px;
  transition: transform .3s ease;

  &.active {
    transform: translateX(160px);
  }
}

.o-menu_button.mat-button {
  padding: 0;
  min-width: 40px;
  color: white;
}

.o-menu_list {
  text-align: left;
  padding-top 20px;
  padding-right: 40px;
  padding-left: 20px;
  padding-bottom: 20px;
  margin-top: 0;
  margin-bottom: 0;
}