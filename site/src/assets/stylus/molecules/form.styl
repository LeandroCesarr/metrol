.m-form {
  max-width: 800px;
}

.m-form_small {
  display: block;
  font-size: 12px;
  margin: 10px 0;
  color: rgba($colors['main-gray'], .8);
}

.m-form_field {
  display: inline-block;

  .mat-form-field {
    font-size: 16px;
    width: 100%;
  }
}

.m-form_field.full {
  width: 100%;
}

.m-form_field.half {
  width: calc(50% - 10px);
  font-size: 0;

  &.right {
    margin-left: 20px;
  }
}